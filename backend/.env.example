# Supabase конфігурація
SUPABASE_URL=your_supabase_project_url
SUPABASE_ANON_KEY=your_supabase_anon_key
SUPABASE_SERVICE_KEY=your_supabase_service_role_key
SUPABASE_JWT_SECRET=your_supabase_jwt_secret

# Server конфігурація
PORT=3000
NODE_ENV=development
LOG_LEVEL=info

# CORS конфігурація
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173

# EDAMAM API FOOD конфігурація
EDAMAM_APP_ID=your_edamam_app_id
EDAMAM_APP_KEY=your_edamam_app_key

# Frontend URL
FRONTEND_URL=http://localhost:5173

# Email конфігурація (опціонально)
# Якщо не налаштовано, email повідомлення будуть тільки логуватися
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_app_password
FROM_EMAIL=noreply@recipeapp.com
FROM_NAME=Recipe App

# Supabase Email Settings
# Перевірте в Supabase Dashboard > Authentication > Settings:
# - Enable email confirmations: може бути true або false
# - Confirm email change: рекомендується true
# - Enable secure email change: рекомендується true

# AWS S3 конфігурація для завантаження файлів
AWS_ACCESS_KEY_ID=your_aws_access_key_id
AWS_SECRET_ACCESS_KEY=your_aws_secret_access_key
AWS_REGION=eu-central-1
AWS_S3_BUCKET=your-recipe-app-bucket
AWS_S3_ENDPOINT=https://s3.eu-central-1.amazonaws.com
# Для CloudFlare R2 або інших S3-сумісних сервісів:
# AWS_S3_ENDPOINT=https://your-account-id.r2.cloudflarestorage.com

# CDN URL для швидкого доступу до файлів (опціонально)
CDN_URL=https://your-cdn-domain.com